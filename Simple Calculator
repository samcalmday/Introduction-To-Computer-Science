
#addition
def add():
  x = int(input("Type a number  "))
  y = int(input("Type a number  "))
  print(x + y)
#subtraction
def sub():
  x = int(input("Type a number  "))
  y = int(input("Type a number  "))
  z = x - y
  print(z)
#division
def div():
  x = int(input("Type a number  "))
  y = int(input("Type a number  "))
  print(x / y)
#multiplication
def mul():
  x = int(input("Type a number  "))
  y = int(input("Type a number  "))
  print(x * y)
#exponential
def exp():
  x = int(input("Type a number  "))
  y = int(input("Type a number  "))
  print(x ** y)
#modulus
def mod():
  x = int(input("Type a number  "))
  y = int(input("Type a number  "))
  print(x % y)


#start
operation = int(input(" type 1 for add \n type 2 for substract \n type 3 for division \n type 4 for multiplication \n type 5 for exponential \n type 6 for modulus \n"))
if (operation > 6) or (operation < 1):
   print("Input number between 1 and 6")
elif operation == 1:
  add()
elif operation == 2:
  sub()
elif operation == 3:
  try:
    div()
  except:
    print("Can not divide by zero")
elif operation == 4:
  mul()
elif operation == 5:
  exp()
elif operation == 6:
  try:
    mod()
  except:
    print("Can not work with zero")    
